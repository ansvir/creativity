<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="creativity" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/creativityDS</jta-data-source>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.xa.PGXADataSource"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/creativity;create=true"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="zaharova6416!"/>
        </properties>
    </persistence-unit>
</persistence>